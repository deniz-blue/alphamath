{
  "lexicon": 1,
  "id": "blue.deniz.poly.relationship",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "properties": {
          "subject": {
            "type": "union",
            "refs": [
              "#didLink",
              "#recordLink"
            ],
            "description": "Relationship to this person"
          },
          "via": {
            "type": "ref",
            "ref": "#recordLink",
            "description": "Used for specifying that a specific system member is the owner of the relationship"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        },
        "required": [
          "subject",
          "createdAt"
        ]
      }
    },
    "didLink": {
      "type": "object",
      "properties": {
        "did": {
          "type": "string",
          "format": "did"
        }
      },
      "description": "Link to someone using their DID",
      "required": [
        "did"
      ]
    },
    "recordLink": {
      "type": "object",
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri"
        }
      },
      "description": "Link to someone using a record, can be a `host.plural.system.member` record for example",
      "required": [
        "uri"
      ]
    }
  }
}
