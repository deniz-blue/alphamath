{
	"lexicon": 1,
	"id": "host.plural.system.profile",
	"defs": {
		"main": {
			"type": "record",
			"description": "System profile. Singleton record (rkey: 'self'). Always public.",
			"key": "literal:self",
			"record": {
				"type": "object",
				"properties": {
					"displayName": {
						"type": "string",
						"maxLength": 640,
						"description": "Display name for the system."
					},
					"description": {
						"type": "string",
						"maxLength": 2560,
						"description": "System description/bio."
					},
					"avatar": {
						"type": "blob",
						"accept": [
							"image/png",
							"image/jpeg",
							"image/webp",
							"image/gif"
						],
						"maxSize": 1000000,
						"description": "Avatar image blob."
					},
					"colour": {
						"type": "string",
						"maxLength": 7,
						"description": "System colour (hex format, e.g. '#ff6b6b')."
					},
					"pronouns": {
						"type": "string",
						"maxLength": 100,
						"description": "System pronouns."
					},
					"createdAt": {
						"type": "string",
						"format": "datetime",
						"description": "When the record was created (ISO 8601)."
					}
				},
				"required": [
					"createdAt"
				]
			}
		}
	}
}